{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Pages de contrat : {{contract.title}}</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('contact_pages_new',{id:contract.id}) }}">Ajouter</a>
                        </div>

                    </div>
                    <div class="card-body w-100">




                        <table class="table">
                            <thead>
                                <tr> 
                                    <th>Numéro de page</th> 
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for contact_page in contact_pages %}
                                <tr> 
                                    <td>{{ contact_page.number }}</td> 
                                    <td> 
                                        <a href="{{ path('contact_pages_edit', {'id': contact_page.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                    </div>


                </div>

            </div>


            {% endblock %}