
{% extends 'admin-base.html.twig' %}


{% block body %}


<main class="main-content">
    {% block topNav %}
    {{ parent() }}
    {% endblock %}

    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between flex-wrap">
                        <div class="header-title">
                            <h4 class="card-title">Nos contrats</h4>
                        </div>

                        <div>

                            <a class="btn btn-primary btn-sm" href="{{ path('contacts_new') }}">Ajouter</a>
                        </div>

                    </div>
                    <div class="card-body w-100">




                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>catégorie</th>
                                    
                                    <th>Page(s)</th>
                                    
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for contact in contacts %}
                                <tr>
                                    <td>{{ loop.index}}</td>
                                    <td>{{ contact.title }}</td>
                                    <td>{{ contact.category }}</td>
                                    
                                    <td>
                                           <a href="{{ path('contact_pages_index',{id:contact.id}) }}"><span class="badge bg-primary">{{ contact.contractPages | length }} page(s)</span></a> 
                                    </td>
                                    
                                    <td> 
                                        <a href="{{ path('contacts_edit', {'id': contact.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                    </div>


                </div>

            </div>


            {% endblock %}